.screen
  width: 100%
  height: 100vh
  padding-top: $topPadding
  padding-right: 20px
  padding-left: 20px
  box-sizing: border-box
  position: relative
  font-family: 'Open sans'

  &.invert
    background-color: $secondaryColor
    color: $abundant

.par
.subtitle
.skill-item
  margin-bottom: 1.31em
  line-height: 1.3em
  display: flex
  flex-direction: row-reverse
  justify-content: flex-end
  position: relative
  &-dots
  &-dots2
    line-height: 1.3em
    width: 25px
    min-width: 25px
    margin-right: ($space - 10px)
    position: relative
    top: 0
    bottom: 0
    overflow-y: hidden
    &:before
      color: $attenuatorColor
      content: '● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ● ●'
      position: absolute
      top: 0
      right: 0
      left: 0
  &-dots2
    width: 54px
    min-width: 54px

.subtitle-text
  font-size: 1.3em
  font-family: 'Anodina'
  flex-direction: row
  justify-content: flex-start
  &:before
    content: '<'
    font-size: 1.2em
    position: relative
    top: -1px

.close
  margin-bottom: 1.31em
  line-height: 1.3em
  display: flex
  position: absolute
  flex-direction: row-reverse
  justify-content: flex-end
  bottom: 0
  left: 20px
  &-tag
    font-size: 1.3em
    font-family: 'Anodina'
    &:after
      content: '>'
      font-size: 1.2em
      position: relative

  &.hover
    bottom: ($space * 2)

.subtitle-dots
  line-height: 1.5em


.puntuation
  display: flex
  justify-content: flex-start

.ptn-true
  position: relative
  >span
    &:last-child
      display: none
    &:first-child
      width: 0.8em
      height: 0.8em
      border-top-right-radius: (0.8em * 2)
      border-bottom-right-radius: (0.8em * 2)
      background-color: $abundant
      border: 2px solid $secondaryColor
      box-sizing: border-box
  .half
    &:last-child
      display: inline-block
      position: absolute
      top: 2.5px
      right: 0
      z-index: 2

.puntuation-circle
  width: 0.8em
  height: 0.8em
  margin-right: (1em / 2)

  &:last-child
    margin-right: 0

  >span
    display: inline-block
    width: (0.8em / 2)
    height: 0.8em
    background-color: $secondaryColor

    &:first-child
      border-top-left-radius: (0.8em * 2)
      border-bottom-left-radius: (0.8em * 2)
    &:last-child
      border-top-right-radius: (0.8em * 2)
      border-bottom-right-radius: (0.8em * 2)
